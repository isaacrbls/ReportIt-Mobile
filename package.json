{
  "name": "reportit-mobile",
  "version": "1.0.0",
  "private": true,
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test:e2e": "wdio run tests/config/wdio.conf.ts",
    "test:e2e:auth": "wdio run tests/config/wdio.conf.ts --spec tests/e2e/auth.spec.ts",
    "test:e2e:report": "wdio run tests/config/wdio.conf.ts --spec tests/e2e/reporting.spec.ts",
    "test:e2e:location": "wdio run tests/config/wdio.conf.ts --spec tests/e2e/location-map.spec.ts",
    "test:android": "wdio run tests/config/wdio.conf.ts --platform android",
    "test:ios": "wdio run tests/config/wdio.conf.ts --platform ios",
    "test:e2e:allure": "wdio run tests/config/wdio.conf.ts && npm run test:report",
    "test:report": "allure generate tests/reports/allure-results --clean && allure open",
    "appium": "appium",
    "appium:doctor": "appium-doctor"
  },
  "overrides": {
    "metro-cache": "0.83.1"
  },
  "dependencies": {
    "@expo-google-fonts/poppins": "^0.4.1",
