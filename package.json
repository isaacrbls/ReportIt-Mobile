    "appium": "^3.1.1",
    "babel-preset-expo": "^54.0.3",
    "chai": "^5.1.2",
    "eas-cli": "^16.20.4",
    "mocha": "^11.1.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2",
    "webdriverio": "^9.5.6"
