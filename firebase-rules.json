{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "reports": {
      "$reportId": {
        ".read": true,
        ".write": "auth != null && (auth.uid == data.child('userId').val() || root.child('users').child(auth.uid).child('Role').val() == 'Admin')"
      }
    },
    "barangays": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('Role').val() == 'Admin'"
    }
  }
}
